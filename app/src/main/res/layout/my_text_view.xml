<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="12dp"
    android:background="@drawable/note_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textAlignment="center"
        android:textColor="#000000"
        android:text="Title"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:layout_below="@+id/title"
        android:text="text text text text text text text text text text text text text text text text text text text text"
        android:textAlignment="textStart"
        android:layout_marginBottom="15dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9 hrs left"
        android:textSize="16dp"
        android:layout_below="@+id/info" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notify"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_baseline_notifications_24"
            app:tint="#000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/done"
            android:layout_below="@+id/info"
            android:layout_toStartOf="@+id/notify"
            android:src="@drawable/ic_baseline_done_all_24"
            app:tint="#000" />

    </LinearLayout>



</RelativeLayout>